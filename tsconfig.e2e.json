{
  "extends": "./tsconfig.json",
  "include": [
    "e2e/**/*.ts",
    "e2e/**/*.spec.ts",
    "src/utils/logger.ts",
    "src/utils/deprecatedAPIs.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "types": ["node", "@playwright/test"],
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}