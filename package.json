{
  "name": "creative-wall-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "postinstall": "playwright install",
    "dev": "vite",
    "build": "run-p type-check:strict \"build-only {@}\" --",
    "preview": "vite preview",
    "test": "run-s test:unit test:e2e",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "run-s check test:unit:coverage test:e2e",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "type-check:strict": "vue-tsc --build --force",
    "type-check:watch": "vue-tsc --build --force --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings 0",
    "check": "run-p type-check:strict lint:strict",
    "check:fix": "run-p type-check:strict lint:fix",
    "ci": "npm run type-check:strict && npm run build",
    "ci:full": "npm run type-check:strict && npm run lint:strict && npm run test:unit:coverage && npm run build",
    "ci:pre-commit": "npm run type-check:strict && npm run build",
    "quality:report": "npm run type-check:strict 2>&1 | tail -1 && npm run lint 2>&1 | tail -1"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
